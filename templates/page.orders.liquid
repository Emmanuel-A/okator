<div class="preloader"></div>

{% include 'accounts-sidebar' %}

<div class="content">
  <!-- /templates/customers/account.liquid -->
  {% comment %}

    For all available customer liquid tags:
      - http://docs.shopify.com/themes/liquid-variables/customer

  {% endcomment %}

  <header class="section-header text-center">
    <h1>Recent Orders</h1>
    {% comment %}{{ 'layout.customer.log_out'| t | customer_logout_link }}{% endcomment %}
  <!--   <hr class="hr--small"> -->
  </header>

  <div class="grid">

    <div class="grid__item medium-down--one-whole">
      
      {% comment %}
        If we have past orders, loop through each one
      {% endcomment %}
      {% if customer.orders.size != 0 %}

        <div class="table-wrap">
          <table class="full table--responsive">
            <thead>
              <tr>
                <th>{{ 'customer.orders.order_number' | t }}</th>
                <th>{{ 'customer.orders.date' | t }}</th>
                <th>{{ 'customer.orders.payment_status' | t }}</th>
                <th>{{ 'customer.orders.fulfillment_status' | t }}</th>
                <th>{{ 'customer.orders.total' | t }}</th>
              </tr>
            </thead>
            <tbody>
              {% for order in customer.orders %}
                <tr class="table__section">
                  <td data-label="{{ 'customer.orders.order_number' | t }}">
                    <div class="order_thumb">
                      {% for line_item in order.line_items %}
                      {{ line_item.image | img_url: '100x100' | img_tag }}
                      {% endfor %}
                    </div>
                    <div class="row link_wrap">{{ 'View Order' | link_to: order.customer_url }}</div>
                  </td>
                  <td data-label="{{ 'customer.orders.date' | t }}">{{ order.created_at | date: format: 'date' }}</td>
                  <td data-label="{{ 'customer.orders.payment_status' | t }}">{{ order.financial_status_label }}</td>
                  <td data-label="{{ 'customer.orders.fulfillment_status' | t }}">{{ order.fulfillment_status_label }}</td>
                  <td data-label="{{ 'customer.orders.total' | t }}">{{ order.total_price | money }}</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>

        <hr class="hr--clear">

      {% else %}

        <p>{{ 'customer.orders.none' | t }}</p>

      {% endif %}
    </div>
  </div>
</div>
