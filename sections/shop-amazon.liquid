{% if section.settings.show == true %}
  <div class="row">
    <a href="{{ section.settings.page_link }}" class="page_link">{{ section.settings.link_text }}</a>
  </div>
{% endif %}
{% schema %}
  {
    "name": "Amazon Banner",
    "settings": [
      {
        "type": "checkbox",
        "id": "show",
        "label": "Show Section",
        "default": true  
      },
      {
          "type": "text",
          "id": "link_text",
          "label": "Page Link Text",
          "default": "Now Available On Amazon"
        },
        {
          "type": "url",
          "id": "page_link",
          "label": "Page Link"
        }
     ]
  }
{% endschema %}

