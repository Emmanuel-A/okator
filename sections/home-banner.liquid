{% if customer.tags contains 'Wholesale' or 'wholesale' %}   
   <div class="home_banner">
    {% for block in section.blocks %}
    <a href="{{block.settings.btn_link_wholesale}}">
      <div class="" style="background: url({{ block.settings.banner_wholesale | img_url: '2800x2800' }}) no-repeat">
        <h1>{{block.settings.title_wholesale}}</h1>
        <h2>{{block.settings.subtitle_wholesale}}</h2>
        <button class="banner_btn">{{block.settings.btn_text_wholesale}}</button>
      </div>
    </a>
    {% endfor %}
  </div>
{% else %}
  <div class="home_banner">
    {% for block in section.blocks %}
    <a href="{{block.settings.btn_link}}">
      <div class="" style="background: url({{ block.settings.banner | img_url: '2800x2800' }}) no-repeat">
        <h1>{{block.settings.title}}</h1>
        <h2>{{block.settings.subtitle}}</h2>
        <button class="banner_btn">{{block.settings.btn_text}}</button>
      </div>
    </a>
    {% endfor %}
  </div>
{% endif %}

{% schema %}
  {
    "name": "Home Banner",
    "settings": [
      {
        "type": "checkbox",
        "id": "show",
        "label": "Show Section",
        "default": true  
      },
      {
        "type": "checkbox",
        "id": "show-wholesale",
        "label": "Show Section (Wholesale)",
        "default": true  
      }
	],
    "blocks": [
      {
        "type": "banner",
        "name": "Banner",
        "settings": [
          {
            "type": "image_picker",
            "id": "banner",
            "label": "Banner Image"
          },
		  {
            "type": "text",
            "id": "title",
            "label": "Title",
			"default": "Bold, Confident, Genuine, Extraordinary"
          },
		  {
            "type": "text",
            "id": "subtitle",
            "label": "Sub Title",
            "default": "On-the-go glow in 30 seconds like."
          },
		  {	
            "type": "text",
            "id": "btn_text",
            "label": "Button Text",
            "default": "Show Me More"
          },
		  {
            "type": "url",
            "id": "btn_link",
            "label": "Button Link"
          },
          {
            "type": "header",
            "content": "Wholesale Header"
          },
          {
            "type": "image_picker",
            "id": "banner_wholesale",
            "label": "Banner Image (Wholesale)"
          },
		  {
            "type": "text",
            "id": "title_wholesale",
            "label": "Title (Wholesale)",
			"default": "Bold, Confident, Genuine, Extraordinary"
          },
		  {
            "type": "text",
            "id": "subtitle_wholesale",
            "label": "Sub Title (Wholesale)",
            "default": "On-the-go glow in 30 seconds like."
          },
		  {	
            "type": "text",
            "id": "btn_text_wholesale",
            "label": "Button Text (Wholesale)",
            "default": "Show Me More"
          },
		  {
            "type": "url",
            "id": "btn_link_wholesale",
            "label": "Button Link (Wholesale)"
          }
        ]
      }
    ]
  }
{% endschema %}

